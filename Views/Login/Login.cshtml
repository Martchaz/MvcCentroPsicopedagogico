@{
    ViewBag.Title = "Iniciar Sesión | Espacio de desarrollo Integral TERRAVERDE";
    Layout = null;

}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light d-flex align-items-center justify-content-center vh-100">

    <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-4">
            <div class="text-center mb-4">
                <img src="@Url.Content("~/FotosDelCentro/LogoDelCentro.jpg")"
                     alt="Logo Centro Psicopedagógico"
                     class="img-fluid rounded mx-auto d-block"
                     style="max-width: 150px; height: auto;" />
            </div>

            <h3 class="mt-2">Espacio de desarrollo Integral TERRAVERDE</h3>
            <p class="text-muted">Acceso al sistema</p>
        </div>

        @using (Html.BeginForm())
        {
            <div class="mb-3">
                <label for="username" class="form-label">Usuario</label>
                @Html.TextBox("Username", null, new { @class = "form-control", placeholder = "Ingrese su usuario", required = "required" })
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Contraseña</label>
                @Html.Password("Password", null, new { @class = "form-control", placeholder = "Ingrese su contraseña", required = "required" })
            </div>

            <div class="d-grid">
                <input type="submit" value="Iniciar Sesión" class="btn btn-primary" />
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="mt-3 text-center">
                <p style="color:red">@ViewBag.Error</p>
            </div>
        }

        <div class="text-center mt-3">
            <small class="text-muted">¿Olvidaste tu contraseña? Contactá al administrador.</small>
        </div>
    </div>

</body>
</html>
